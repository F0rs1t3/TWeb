@{
    ViewData["Title"] = "Add Car";
}

<div style="display: flex; justify-content: center; align-items: center; height: 90vh; padding: 20px;">
    <form method="post" style="background-color: #fff; padding: 30px 40px; border-radius: 12px; box-shadow: 0 4px 20px rgba(0, 0, 0, 0.05); width: 100%; max-width: 500px;" action="/">
        <h2 style="margin-bottom: 25px; color: #333; text-align: center;">Add New Car</h2>

        <div style="margin-bottom: 20px;">
            <label for="make" style="display: block; margin-bottom: 8px; font-weight: 600; color: #333;">Make</label>
            <input type="text" id="make" name="make" required
                   style="width: 100%; padding: 10px 14px; font-size: 15px; border: 1px solid #ccc; border-radius: 8px; background-color: #f9f9f9;" />
        </div>

        <div style="margin-bottom: 20px;">
            <label for="model" style="display: block; margin-bottom: 8px; font-weight: 600; color: #333;">Model</label>
            <input type="text" id="model" name="model" required
                   style="width: 100%; padding: 10px 14px; font-size: 15px; border: 1px solid #ccc; border-radius: 8px; background-color: #f9f9f9;" />
        </div>

        <div style="margin-bottom: 20px;">
            <label for="year" style="display: block; margin-bottom: 8px; font-weight: 600; color: #333;">Year</label>
            <input type="number" id="year" name="year" min="1900" max="2100" required
                   style="width: 100%; padding: 10px 14px; font-size: 15px; border: 1px solid #ccc; border-radius: 8px; background-color: #f9f9f9;" />
        </div>

        <div style="margin-bottom: 20px;">
            <label for="price" style="display: block; margin-bottom: 8px; font-weight: 600; color: #333;">Price ($)</label>
            <input type="number" id="price" name="price" step="0.01" required
                   style="width: 100%; padding: 10px 14px; font-size: 15px; border: 1px solid #ccc; border-radius: 8px; background-color: #f9f9f9;" />
        </div>

        <div style="margin-bottom: 20px;">
            <label for="description" style="display: block; margin-bottom: 8px; font-weight: 600; color: #333;">Description</label>
            <textarea id="description" name="description" rows="4"
                      style="width: 100%; padding: 10px 14px; font-size: 15px; border: 1px solid #ccc; border-radius: 8px; background-color: #f9f9f9;"></textarea>
        </div>

        <div style="margin-bottom: 20px;">
            <label for="images" style="display: block; margin-bottom: 8px; font-weight: 600; color: #333;">Upload Images (optional)</label>
            <input type="file" id="images" name="images" multiple accept="image/*"
                   style="display: block; padding: 8px; font-size: 15px; border: 1px solid #ccc; border-radius: 8px; background-color: #f9f9f9; width: 100%;">
        </div>

        <button type="submit"
                style="width: 100%; padding: 12px 20px; background-color: #007bff; color: white; border: none; border-radius: 8px; font-size: 16px; cursor: pointer;">
            Submit
        </button>
    </form>
</div>
