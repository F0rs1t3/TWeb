@{
    ViewData["Title"] = "Home";
}

<div class="hero-section text-center fade-in">
    <div class="container">
        <h1 class="display-4 fw-bold mb-3">Welcome to CarLux</h1>
        <p class="lead mb-4">Your trusted second-hand car marketplace — safe, fast and verified.</p>

        @if (User.Identity?.IsAuthenticated == true)
        {
            <div class="d-flex justify-content-center gap-3">
                <a href="@Url.Action("Create", "Cars")" class="btn btn-primary btn-lg">
                    <i class="fas fa-plus-circle me-2"></i> List a Car
                </a>
                <a href="@Url.Action("MyListings", "Cars")" class="btn btn-outline-light btn-lg">
                    <i class="fas fa-car-side me-2"></i> My Listings
                </a>
            </div>
        }
        else
        {
            <div class="d-flex justify-content-center gap-3">
                <a asp-controller="Account" asp-action="Register" class="btn btn-primary btn-lg">
                    <i class="fas fa-user-plus me-2"></i> Get Started
                </a>
                <a asp-controller="Cars" asp-action="Buy" class="btn btn-outline-light btn-lg" asp-area="">
                    <i class="fas fa-search me-2"></i> Browse Cars
                </a>
            </div>
        }
    </div>
</div>

<div class="container fade-in">
    <div class="text-center mb-5">
        <h2 class="fw-bold">Why Choose CarLux?</h2>
        <p class="text-muted">We simplify the car buying and selling process, ensuring trust, transparency, and tech-powered tools.</p>
    </div>

    <div class="row text-center">
        <div class="col-md-4 mb-4">
            <div class="card card-fade h-100">
                <div class="card-body">
                    <i class="fas fa-cogs fa-3x mb-3 text-primary"></i>
                    <h5 class="card-title">Verified Listings</h5>
                    <p class="card-text">Each car is reviewed and approved before going public, ensuring transparency and trust.</p>
                </div>
            </div>
        </div>

        <div class="col-md-4 mb-4">
            <div class="card card-fade h-100">
                <div class="card-body">
                    <i class="fas fa-shield-alt fa-3x mb-3 text-success"></i>
                    <h5 class="card-title">Safe Transactions</h5>
                    <p class="card-text">Our platform uses the latest security protocols to protect your data and payments.</p>
                </div>
            </div>
        </div>

        <div class="col-md-4 mb-4">
            <div class="card card-fade h-100">
                <div class="card-body">
                    <i class="fas fa-users fa-3x mb-3 text-info"></i>
                    <h5 class="card-title">Community Support</h5>
                    <p class="card-text">Chat with verified dealers or buyers and schedule meetings at your convenience.</p>
                </div>
            </div>
        </div>
    </div>

    @if (!User.Identity?.IsAuthenticated ?? true)
    {
        <div class="row mt-5 fade-in" style="margin-bottom: 2rem;">
            <div class="col-12">
                <div class="card bg-light text-center p-5">
                    <h3 class="mb-3">Join the CarLux community today</h3>
                    <p class="lead mb-4">Create your free account and get access to verified cars, seller tools, and secure communication.</p>

                    <div class="d-flex flex-column flex-md-row justify-content-center align-items-center gap-3">
                        <a asp-controller="Account" asp-action="Register" class="btn btn-primary btn-lg">
                            <i class="fas fa-user-plus me-2"></i> Sign Up
                        </a>
                        <a asp-controller="Account" asp-action="Login" class="btn btn-outline-primary btn-lg">
                            <i class="fas fa-sign-in-alt me-2"></i> Login
                        </a>
                    </div>
                </div>
            </div>
        </div>
    }

</div>

@section Scripts {
    <script>
        // Add Font Awesome if not already loaded
        if (!document.querySelector('link[href*="font-awesome"]')) {
            const link = document.createElement('link');
            link.rel = 'stylesheet';
            link.href = 'https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css';
            document.head.appendChild(link);
        }
    </script>
}