@{
    ViewData["Title"] = "Profile";
}

<div class="profile-page">
    <div class="profile-header">
        <i class="fas fa-user-circle" style="font-size: 96px; color: #aaa; margin-right: 20px;"></i>
        <div class="user-info">
            <h2>John Doe</h2>
            <p>john.doe@example.com</p>
            <button class="edit-button">Edit Profile</button>
        </div>
    </div>

    <div class="profile-tabs">
        <button class="tab active">My Listings</button>
        <button class="tab">Account Settings</button>
    </div>

    <div class="profile-content">
        <p>Here you can see your listings or account settings...</p>
    </div>
</div>

<style>
    .profile-page {
        max-width: 900px;
        margin: 40px auto;
        padding: 20px;
        background-color: #fff;
        border-radius: 12px;
        box-shadow: 0 2px 6px rgba(0, 0, 0, 0.05);
        font-family: sans-serif;
    }

    .profile-header {
        display: flex;
        align-items: center;
        gap: 20px;
        margin-bottom: 30px;
    }

    .avatar {
        width: 100px;
        height: 100px;
        border-radius: 50%;
        object-fit: cover;
        border: 3px solid #007bff;
    }

    .user-info h2 {
        margin: 0;
        font-size: 24px;
    }

    .user-info p {
        color: #666;
        margin: 4px 0 12px;
    }

    .edit-button {
        background-color: #007bff;
        color: #fff;
        border: none;
        padding: 8px 16px;
        border-radius: 6px;
        cursor: pointer;
    }

        .edit-button:hover {
            background-color: #0056b3;
        }

    .profile-tabs {
        display: flex;
        gap: 12px;
        margin-bottom: 20px;
    }

    .tab {
        background: #f1f1f1;
        border: none;
        padding: 10px 18px;
        border-radius: 6px;
        cursor: pointer;
        font-size: 15px;
    }

        .tab.active {
            background-color: #007bff;
            color: white;
        }

    .profile-content {
        min-height: 200px;
        border-top: 1px solid #ddd;
        padding-top: 20px;
        color: #333;
    }

</style>