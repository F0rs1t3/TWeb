<style>
    .car-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
        gap: 20px;
        padding: 20px;
        width: 100%;
        box-sizing: border-box;
    }

    .car-card {
        background: white;
        border-radius: 12px;
        overflow: hidden;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
        transition: transform 0.2s ease;
        display: flex;
        flex-direction: column;
    }

        .car-card:hover {
            transform: translateY(-5px);
        }

        .car-card img {
            width: 100%;
            height: 160px;
            object-fit: cover;
        }

    .card-content {
        padding: 12px 16px;
        display: flex;
        flex-direction: column;
        gap: 4px;
    }

        .card-content h3 {
            font-size: 1rem;
            color: #111;
            margin: 0;
        }

        .card-content p {
            margin: 0;
            color: #666;
            font-size: 0.9rem;
        }

        .card-content .price {
            font-weight: bold;
            font-size: 1.05rem;
            color: #000;
            margin-top: 4px;
        }

    .meta {
        display: flex;
        justify-content: space-between;
        font-size: 0.85rem;
        color: #999;
        margin-top: 10px;
    }

</style>