<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - Vanzari de Masini</title>
    <link rel="stylesheet" href="~/css/style.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" rel="stylesheet" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600&display=swap" rel="stylesheet">

    @{
        var controller = ViewContext.RouteData.Values["controller"]?.ToString();
        var action = ViewContext.RouteData.Values["action"]?.ToString();
    }

    @if (controller == "Authorization" && (action == "Index" || action == "Register"))
    {
        <link rel="stylesheet" href="~/css/authorization.css" />
    }
</head>
<body>
    <div class="layout">
        <!-- Sidebar -->
        <aside class="sidebar">
            <div style="text-align:center" class="logo"><a href="/" class="name"><img src="~/images/logo.jpg" alt="logo" style="width:140px;" /></a><br><span style="color:rgba(41,46,104,255)">MARKETPLACE</span></div>
            <nav>
                <ul>
                    <li><i class="fas fa-car-side"></i> <a class="sblinks" href="/">Cars</a></li>
                    <li><i class="fas fa-tags"></i><a class="sblinks" href="/">Deals & Offers</a></li>
                    <li><i class="fas fa-cogs"></i><a class="sblinks" href="/"> Auto Parts</a></li>
                    <li><i class="fas fa-tools"></i><a class="sblinks" href="/"> Services & Repairs</a></li>
                    <li><i class="fas fa-file-contract"></i><a class="sblinks" href="/"> Car Insurance</a></li>
                    <li><i class="fas fa-heart"></i><a class="sblinks" href="/"> Favorites</a></li>
                    <li><i class="fas fa-plus-circle"></i><a class="sblinks" href="/"> Sell a Car</a></li>
                    <li><i class="fas fa-clipboard-list"></i><a class="sblinks" href="/"> My Listings</a></li>
                    <li><i class="fas fa-user-shield"></i><a class="sblinks" href="/"> Settings</a></li>
                </ul>
            </nav>
        </aside>

        <!-- Main Content -->
        <div class="main-content">

            <!-- Top Bar -->
            <header class="topbar" style="display: flex; align-items: center; justify-content: space-between; height: 60px; background-color: #ffffff; border-bottom: 1px solid #dddddd; padding: 0 20px;">
                <div class="topbar-left" style="display: flex; align-items: center; flex: 1; min-width: 0;">
                    <div class="filters-bar" style="display: flex; align-items: center; gap: 12px;">
                        <div class="dropdown-group" style="display: flex; gap: 12px;">
                            <div class="filter-wrapper" style="position: relative;">
                                <i class="fas fa-th icon-left" style="position: absolute; top: 50%; left: 12px; transform: translateY(-50%); font-size: 14px; color: #aaa; pointer-events: none;"style="position: absolute; top: 50%; left: 12px; transform: translateY(-50%); font-size: 14px; color: #aaa; pointer-events: none;"></i>
                                <select class="form-select filter-select" aria-label="Category" style="padding: 10px 14px 10px 40px; font-size: 15px; color: #333; background-color: #fff; border: 1px solid #ddd; border-radius: 8px; appearance: none; background-image: none; box-shadow: 0 1px 2px rgba(0, 0, 0, 0.03); transition: border-color 0.2s ease-in-out; min-width: 200px;">
                                    <option selected>Select Category</option>
                                    <option value="1">SUV</option>
                                    <option value="2">Sedan</option>
                                    <option value="3">Truck</option>
                                    <option value="4">Coupe</option>
                                </select>
                            </div>
                            <div class="filter-wrapper" style="position: relative;">
                                <i class="fas fa-filter icon-left" style="position: absolute; top: 50%; left: 12px; transform: translateY(-50%); font-size: 14px; color: #aaa; pointer-events: none;"></i>
                                <select class="form-select filter-select" aria-label="Sort" style="padding: 10px 14px 10px 40px; font-size: 15px; color: #333; background-color: #fff; border: 1px solid #ddd; border-radius: 8px; appearance: none; background-image: none; box-shadow: 0 1px 2px rgba(0, 0, 0, 0.03); transition: border-color 0.2s ease-in-out; min-width: 200px;">
                                    <option selected>Sort by</option>
                                    <option value="price_asc">Price: Low to High</option>
                                    <option value="price_desc">Price: High to Low</option>
                                    <option value="year_desc">Newest</option>
                                    <option value="year_asc">Oldest</option>
                                </select>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="topbar-right" style="display: flex; align-items: center; gap: 20px; flex-shrink: 0;">
                    <div class="auth" style="display: flex; align-items: center;">
                        @{
                            var controller = ViewContext.RouteData.Values["controller"]?.ToString();
                            var action = ViewContext.RouteData.Values["action"]?.ToString();
                        }

                        @if (!(controller == "Authorization" && (action == "Index" || action == "Register")))
                        {
                            <a href="/authorization">
                                <button class="headbutton">Sign in</button>
                            </a>
                        }
                    </div>
                    <div class="actions">
                        <button class="headbutton"><a href="/addcar" style="text-decoration:none;color:white;">Add Car</a></button>
                        <a href="/profile"><i class="fas fa-user-circle profile-icon"></i></a>
                    </div>
                </div>
            </header>


            <!-- Page Content -->
            <main class="page-body">
                @RenderBody()
            </main>
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
   

  

