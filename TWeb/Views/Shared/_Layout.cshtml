<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - Vanzari de Masini</title>
    <link rel="stylesheet" href="~/css/style.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" rel="stylesheet" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600&display=swap" rel="stylesheet">

    @{
        var controller = ViewContext.RouteData.Values["controller"]?.ToString();
        var action = ViewContext.RouteData.Values["action"]?.ToString();
    }

    @if (controller == "Authorization" && (action == "Index" || action == "Register"))
    {
        <link rel="stylesheet" href="~/css/authorization.css" />
    }
</head>
<body>
    <div class="layout">
        <!-- Sidebar -->
        <aside class="sidebar">
            <div style="text-align:center" class="logo"><a href="/" class="name">altV</a><br><span>MARKETPLACE</span></div>
            <nav>
                <ul>
                    <li><i class="fas fa-car-side"></i> <a class="sblinks" href="/">Cars</a></li>
                    <li><i class="fas fa-tags"></i><a class="sblinks" href="/">Deals & Offers</a></li>
                    <li><i class="fas fa-cogs"></i><a class="sblinks" href="/"> Auto Parts</a></li>
                    <li><i class="fas fa-tools"></i><a class="sblinks" href="/"> Services & Repairs</a></li>
                    <li><i class="fas fa-file-contract"></i><a class="sblinks" href="/"> Car Insurance</a></li>
                    <li><i class="fas fa-heart"></i><a class="sblinks" href="/"> Favorites</a></li>
                    <li><i class="fas fa-plus-circle"></i><a class="sblinks" href="/"> Sell a Car</a></li>
                    <li><i class="fas fa-clipboard-list"></i><a class="sblinks" href="/"> My Listings</a></li>
                    <li><i class="fas fa-user-shield"></i><a class="sblinks" href="/"> Settings</a></li>
                </ul>
            </nav>
        </aside>

        <!-- Main Content -->
        <div class="main-content">
            <!-- Top Bar -->
            <header class="topbar">
                <div class="auth">
                    @{
                        var controller = ViewContext.RouteData.Values["controller"]?.ToString();
                        var action = ViewContext.RouteData.Values["action"]?.ToString();
                    }

                    @if (!(controller == "Authorization" && (action == "Index" || action == "Register")))
                    {
                        <a href="/authorization">
                            <button class="headbutton" style="margin-right:20px">Sign in</button>
                        </a>
                    }

                    @* <div>Login</div> *@
                    @* <div class="sub">Register</div> *@
                </div>
                <div class="actions">
                    <button class="headbutton">+ Create</button>
                    <i class="fas fa-user-circle profile-icon"></i>
                </div>
            </header>

            <!-- Page Content -->
            <main class="page-body">
                @RenderBody()
            </main>
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
   

  

