@model List<TWeb.Models.Car>
@{
    ViewData["Title"] = "All Cars";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>All Cars</h2>
        @if (User.Identity!.IsAuthenticated)
        {
            <a asp-action="Create" class="btn btn-success">
                <i class="fas fa-plus"></i> Add New Car
            </a>
        }
    </div>

    @if (ViewBag.IsAdmin)
    {
        <div class="alert alert-info">
            <i class="fas fa-shield-alt"></i> Administrator View - You can manage all cars
        </div>
    }

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (Model?.Any() == true)
    {
        <div class="row">
            @foreach (var car in Model)
            {
                <div class="col-md-4 mb-4">
                    <div class="card h-100">
                        @if (!string.IsNullOrEmpty(car.PhotoPath))
                        {
                            <img src="@car.PhotoPath" class="card-img-top" alt="@car.Brand @car.Model" style="height: 200px; object-fit: cover;">
                        }
                        else
                        {
                            <div class="card-img-top bg-light d-flex align-items-center justify-content-center" style="height: 200px;">
                                <i class="fas fa-car fa-3x text-muted"></i>
                            </div>
                        }
                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title">@car.Brand @car.Model</h5>
                            <p class="card-text">
                                <strong>Year:</strong> @car.Year<br>
                                <strong>Mileage:</strong> @car.Mileage.ToString("N0") KM<br>
                                <strong>Owner:</strong> @car.Owner?.FirstName @car.Owner?.LastName<br>
                                <strong>Added:</strong> @car.CreatedAt.ToString("MMM dd, yyyy")
                            </p>
                            <div class="mt-auto">
                                <a asp-action="Details" asp-route-id="@car.Id" class="btn btn-primary btn-sm">View Details</a>
                                
                                @if (User.Identity!.IsAuthenticated && (car.OwnerId == User.FindFirst(System.Security.Claims.ClaimTypes.NameIdentifier)?.Value || ViewBag.IsAdmin))
                                {
                                    <a asp-action="Edit" asp-route-id="@car.Id" class="btn btn-warning btn-sm">Edit</a>
                                }
                                
                                @if (ViewBag.IsAdmin)
                                {
                                    <form asp-action="Delete" asp-route-id="@car.Id" method="post" class="d-inline" 
                                          onsubmit="return confirm('Are you sure you want to delete this car?')">
                                        <button type="submit" class="btn btn-danger btn-sm">
                                            <i class="fas fa-trash"></i> Delete
                                        </button>
                                    </form>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="text-center mt-5">
            <i class="fas fa-car fa-5x text-muted mb-3"></i>
            <h4>No cars available</h4>
            <p class="text-muted">No cars have been added yet.</p>
            @if (User.Identity!.IsAuthenticated)
            {
                <a asp-action="Create" class="btn btn-success">
                    <i class="fas fa-plus"></i> Add the First Car
                </a>
            }
        </div>
    }
</div>